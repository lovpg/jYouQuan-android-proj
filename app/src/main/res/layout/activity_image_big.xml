<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6594C7"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:src="@mipmap/back" />

        </LinearLayout>

        <TextView
            android:id="@+id/image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/170"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/image_ok"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:background="@mipmap/btn_image_right"
                android:text="ok"
                android:textColor="#6594C7"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/picture_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/olla_delete"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/image_check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/check_image"
            android:button="@null"
            android:checked="false"
            android:focusable="false"
            android:visibility="gone"
            />
<ImageView
    android:id="@+id/image_save"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_gravity="bottom"
    android:src="@mipmap/image_save"
    android:padding="6dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="20dp"
    android:visibility="gone"
    />

    </FrameLayout>
</LinearLayout>